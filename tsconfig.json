{
  "compilerOptions": {
    // Strict mode для максимальной проверки типов
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Гибридная работа с JS
    "allowJs": true,
    "checkJs": false,

    // ES Modules конфигурация
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],

    // Вывод
    "outDir": "./dist",
    "rootDir": "./src",

    // Интероп с CommonJS
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Дополнительные проверки
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    // Source maps для дебага
    "sourceMap": true,
    "declaration": true,

    // Пропуск проверки библиотек
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "data",
    "prisma"
  ]
}
